<container title="基础用法">
  <tabs items="{{ items }}" />
</container>
<container title="胶囊">
  <tabs
    type="capsule"
    items="{{ items }}"
    defaultCurrent="{{ 1 }}" />
</container>
<container title="带副标题">
  <tabs
    type="mixin"
    items="{{ items }}" />
</container>
<container title="禁用状态">
  <tabs items="{{ items2 }}" />
</container>
<container title="onChange">
  <tabs
    items="{{ items }}"
    bind:change="onChange" />
</container>
<container title="plus按钮">
  <tabs items="{{ items }}">
    <view slot="plus">
      <icon
        type="AddOutline"
        bind:tap="onPlus" />
    </view>
  </tabs>
</container>
<container title="控制模式">
  <tabs
    items="{{ items }}"
    current="{{ current }}"
    bind:change="handleChange" />
</container>
<container title="content在外层自定义">
  <tabs
    items="{{ items }}"
    current="{{ current }}"
    bind:change="handleChange" />
  <view class="content">{{ items[current].content }}</view>
</container>
