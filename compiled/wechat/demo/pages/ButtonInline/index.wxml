  </ant-button>
  <ant-button
    type="primary"
    inline
    size="medium"
    bind:tap="handleTap">
    主要按钮
  </ant-button>
  <ant-button
    type="primary"
    inline
    size="small"
    bind:tap="handleTap">
    主要按钮
  </ant-button>
</ant-container>
