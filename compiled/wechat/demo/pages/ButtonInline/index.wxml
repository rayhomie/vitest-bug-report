<ant-container
  title="按钮类型"
  className="list">
  <ant-button
    type="primary"
    inline
    bind:tap="handleTap">
    主要按钮
  </ant-button>
  <ant-button
    type="default"
    inline
    bind:tap="handleTap">
    次要按钮
  </ant-button>
  <ant-button
    type="text"
    inline
    bind:tap="handleTap">
    文本按钮
  </ant-button>
</ant-container>
<ant-container
  title="按钮尺寸"
  className="list">
