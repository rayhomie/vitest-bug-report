<ant-tabs
  items="{{ items }}"
  current="{{ current }}"
  onChange="onChange"
  className="tabs"
  direction="vertical">
  <scroll-view
    scroll-top="{{ scrollTop }}"
    scroll-y="{{ true }}"
    onScroll="onScroll"
    scroll-with-animation="{{ true }}"
    scroll-animation-duration="{{ 300 }}"
    class="content">
    {{ items[current].content }}
  </scroll-view>
</ant-tabs>

<view class="footer" />
